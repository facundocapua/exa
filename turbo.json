{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [
    ".env",
    ".env.local"
  ],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:mails": {}
  }
}
